	mail_text: mailtext.drv_idle {
		from: "$NAME$ gidaria" #+ Message sender
		subject: "Kamoia behar dut lan egiteko" #+ Message subject
		body: "Egun on jauna,<br><br>Ez dakit konturatu zaren, baina $DAYS$ daramatzat $CITY$-en lanik gabe. Nahiko nekagarria da diru sarrerarik gabe egotea nire kontuak ordaindu behar ditudan bitartean. Mesedez, eman nazazu kamioi bat hurrengoko $DAYS2$etan edo ez dut zu utzi baino baino aukera gehiagorik edukiko.<br><br>$NAME$" #+ Message body
	}

	mail_text: mailtext.drv_idle.female {
		from: "$NAME$ gidaria" #+ Message sender - written by female
